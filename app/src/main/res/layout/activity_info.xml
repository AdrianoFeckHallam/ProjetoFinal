<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#393636">

    <LinearLayout
        android:layout_width="409dp"

        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="#393636">

        android:layout_height="732dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="#000000">

        <LinearLayout
            android:id="@+id/topmain"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:layout_marginTop="10dp"
            android:background="#393636"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMenu"
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:layout_gravity="right"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/abc_vector_test"
                android:clickable="true"
                android:onClick="retorna"

                android:paddingTop="15dp"
                android:textColor="#CFCFCF" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:gravity="center_horizontal"
                android:text="@string/nomeApp"
                android:textAllCaps="false"
                android:textColor="@color/titulo_color"
                android:textColorHighlight="#000000"
                android:textColorHint="#ffffff"
                android:textColorLink="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold" />

            <SearchView
                android:id="@+id/btnSearch"
                android:layout_width="51dp"
                android:layout_height="47dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="100dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/account_circle_white_18dp"
                android:gravity="left"
                android:paddingTop="10dp"
                android:visibility="visible"
                tools:visibility="visible">

            </SearchView>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_nome_filme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:text="nome_Filme"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_poster_filme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic"
                android:contentDescription="TODO" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_descricao_filme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="descricao_Filme_descricao_Filme_descricao_Filme_descricao_Filme_descricao_Filme_descricao_Filme_descricao_Filme_descricao_Filme_descricao_Filme_descricao_Filme"
                android:textColor="#FFFDFD"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="24sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

